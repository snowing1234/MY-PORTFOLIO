<?xml version="1.0" encoding="UTF-8"?>

<!--  View 자원과 관련된 설정  -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">
	
	<!-- spring 기본 설정 -->
	<context:annotation-config/>                                      <!-- annotation 사용설정 -->
	<context:component-scan base-package="com.tstory.joalog.board" />       <!-- component scan 범위 -->
	<context:component-scan base-package="com.tstory.joalog.member" />
	<context:component-scan base-package="com.tstory.joalog.post" />
	<context:component-scan base-package="com.tstory.joalog.api" />
	<context:component-scan base-package="com.tstory.joalog.file" />
	
	<mvc:annotation-driven />                                         <!-- annotation 사용설정 -->
	<mvc:resources mapping="/resources/**" location="/resources/" />  <!--  자원 설정  -->

	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver"> <!-- controller에서 view페이지 맵핑시 사용 -->
		<property name="prefix" value="/WEB-INF/views/"></property>
		<property name="suffix" value=".jsp"></property>
		<property name="order" value="2" />
	</bean>
	

	 
	<!--  controller Mapping -->
	<bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
	  <property name="alwaysUseFullPath" value="false"></property>
	  <property name="mappings">
	    <props>
	      <prop key="/post/*">postController</prop>
	      <prop key="/board/*">boardController</prop>
	      <prop key="/member/*">memberController</prop>
	      <prop key="/auth/*">apiController</prop>
	       <prop key="/file/*">fileController</prop>
	    </props>
	  </property>
	</bean>
	
	
	
	
	<!--  tiles 설정 -->
	<bean id="tilesViewResolver" class="org.springframework.web.servlet.view.UrlBasedViewResolver">
	   <property name="viewClass" value="org.springframework.web.servlet.view.tiles3.TilesView" />
			<property name="order" value="1" /><!-- 순서를 우선으로 지정 -->
	</bean>
 
	<bean id="tilesConfigurer" class="org.springframework.web.servlet.view.tiles3.TilesConfigurer">
	  <property name="definitions">
	     <list>
	       <value>classpath:config/tiles-def.xml</value>
	     </list>
	  </property>
	</bean>


</beans>

